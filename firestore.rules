rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated (and optionally check specific UIDs)
    function isAdmin() {
      // Replace these placeholders with actual Admin UIDs for stricter security
      // return request.auth != null && request.auth.uid in ['ADMIN_UID_1', 'ADMIN_UID_2'];
      return request.auth != null;
    }

    // Settings & Configuration
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Rooms
    match /rooms/{room} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Bookings
    match /bookings/{booking} {
      // Allow anyone to create a booking (guest)
      allow create: if true;
      // Only admins can read, update, or delete bookings
      allow read, update, delete: if isAdmin();
    }

    // Mail (Email Notifications)
    match /mail/{mail} {
      // Allow anyone to trigger an email (e.g. confirmation on client side)
      allow create: if true;
      // Only admins can read or manage mail logs
      allow read, update, delete: if isAdmin();
    }

    // Default catch-all (Optional: restrictive by default in production)
    // match /{document=**} {
    //   allow read, write: if false;
    // }
  }
}